<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.ForgotpasswordActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_wave" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Forgot Password !!"
            android:textColor="@color/text_color_auth"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="We will reset your password by this email"
            android:textColor="@color/text_color_auth"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtxtFEmail"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10sp"
            android:autofillHints="emailAddress"
            android:drawableStart="@drawable/baseline_lock_reset_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/text_color_auth"
            android:ems="11"
            android:textColor="@color/text_color_auth"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"/>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:background="@drawable/btn_rounded"
            android:ems="13"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:elevation="@dimen/_5sdp"
        android:fadingEdge="vertical"
        android:rotation="180"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wavee" />
</LinearLayout>